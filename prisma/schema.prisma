generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id        String     @id @default(cuid())
  userId    String
  title     String
  queries   Json[]     @default([])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  type      ThreadType

  @@index([userId])
  @@index([createdAt])
}

model Document {
  id                 String   @id @default(cuid())
  userId             String
  title              String
  markdown           String
  interlineEquations String[] @default([])
  inlineEquations    String[] @default([])
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  images             Json     @default("{}")
  models             Model[]

  @@index([userId])
  @@index([createdAt])
}

model Model {
  id            String   @id @default(cuid())
  documentId    String
  imageId       String
  selectedImage String
  plotData      Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  document      Document @relation(fields: [documentId], references: [id])

  @@index([documentId])
  @@index([createdAt])
}

enum ThreadType {
  PIC
  document
}
